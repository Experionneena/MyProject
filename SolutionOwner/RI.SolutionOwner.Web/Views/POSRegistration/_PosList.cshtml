@using RI.SolutionOwner.Web.Models;

@model List<POSViewModel>
<div class="default_table">
    <div class="table-responsive">
        <table class="table tbl-colapse" id="posTable">
            <thead>
                <tr class="tbl_head">
                    <th class="text-center">
                        <div class="checkbox_style">
                            <input type="checkbox" id="posCheckBox" />
                            <label for="posLabel"></label>
                        </div>
                    </th>
                    <th>POS Number</th>
                    <th>Purchase LPO</th>
                    <th>Supplier</th>
                    <th>Manufacturer</th>
                    <th>Model</th>
                    <th>Mfg Year</th>
                    <th>Warranty Expiry</th>     
                    <th>Assigned To</th>              
                    <th class="text-center">Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count != 0)
                {
                    foreach (var item in Model)
                    {
                        <tr data-id="@item." data-parent="">
                            <td class="text-center">
                                <div class="checkbox_style">
                                    <input type="checkbox" id="@item.Id" onclick="CheckBoxChange('@item.Id')" class="checkbox_click" />
                                    <label for="@item.Id"></label>
                                </div>
                            </td>
                            <td>@item.POSNumber</td>
                            <td>@item.PurchaseLPO</td>
                            <td>@item.Supplier</td>
                            <td>@item.Manufacturer</td>
                            <td>@item.ModelNumber</td>
                            <td>@item.ManufacturingYear</td>  
                            <td>@item.WarrantyExpiry</td>
                            <td>Not Assigned</td>    
                                                    
                            @if (item.IsActive)
                            {
                                <td class="text-center">
                                    <i class="icon-done" aria-hidden="true" id="activestatusi_@item.Id"></i>
                                </td>
                            }
                            else
                            {
                                <td class="text-center">
                                    <i class="icon-block" aria-hidden="true" id="activestatusi_@item.Id"></i>
                                </td>
                            }
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td></td>
                        <td>
                            No data available in table
                        </td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-lg-6 text-left">
        <div class="table-page-info">Showing <span>10</span> out of <span>50</span></div>
    </div>
    <div class="col-lg-6">
        <nav aria-label="Page navigation">
            <ul class="pagination pagination--c pagination-sm pull-right">
                <li>
                    <a href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li>
                    <a href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<script src="~/Js/DatatableJs/Datatable.js"></script>
<script src="~/Js/DatatableJs/Datatable.js"></script>
<script>
    $(document).ready(function () {
        var mSortingString = [];
        mSortingString.push({ "bSortable": true, "aTargets": [1, 5] });
        InitialiseDataTable(mSortingString);

    });

</script>
